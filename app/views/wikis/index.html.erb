<h1>All Wikis</h1><br />

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p><%= link_to wiki.title, user_wiki_path(wiki.user, wiki) %></p>
          </h4>
          <small>
            <%= wiki.body %>
          </small>
        </div>
      </div>
    <% end %>
  </div><br />
  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_user_wiki_path(current_user, Wiki.new), class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
