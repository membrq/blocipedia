<h1>All Wikis</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p><%= link_to wiki.title, wikis_path %></p>
          </h4>
          <small>
            <%= wiki.body %>
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_user_wiki_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
