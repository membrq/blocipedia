<% content_for :top_content do %>
<% end %>

<h1>Edit Wiki</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guideline for Wikis</p>
     <ul>
       <li>All wikis must be haikus.</li>
       <li>The letter "Q" is forbidden.</li>
       <li>The incessant use of hashtags will get you banned.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for [@wiki.user, @wiki] do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>

   <% if @wiki.user == current_user %>
     <%= form_tag collaborators_path, method: :post do %>
       <%= text_field_tag :email %>
       <%= submit_tag "Add Collaborator" %>
     <% end %>
   <% end %>

  <div class="container">
    <div class="row">
    <h4>Wiki Collaborators</h4>
      <% @wiki.collaborators.each do |collaborator|%>
        <%= collaborator.user.name %>,
        <%= collaborator.user.email %>
       <% end %>
       <%# f.label :private, class: 'checkbox' do %>
         <%# f.check_box :private %>
       <%# end %>
       <% if @wiki.user == current_user %>
          <%= link_to "Remove Collaborator", collaborator_path(@wiki), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this collaborator?'} %>
       <% end %>
     </div>
  </div>
<%# end %>
</div>
