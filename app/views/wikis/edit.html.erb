<% content_for :top_content do %>
<% end %>

<h1>Edit Wiki</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guideline for Wikis</p>
     <ul>
       <li>All wikis must be haikus.</li>
       <li>The letter "Q" is forbidden.</li>
       <li>The incessant use of hashtags will get you banned.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for [@wiki.user, @wiki] do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>

   <%# if @wiki.user == current_user %>
     <%# form_tag collaborators_path, method: :post do %>
       <%# text_field_tag :email %>
       <%# submit_tag "Add Collaborator" %>
     <%# end %>
   <%# end %>

  <div class="container">
    <div class="row">
    <h4>Wiki Collaborators</h4>
      <% @users.each do |user| %>
        <%= user.email %><br />
        <%= if @wiki.user == current_user && @wiki.collaborator.blank? %>
           <%= link_to "Add Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post %><br />
        <% end %>
        <% if @wiki.user == current_user && @wiki.collaborator.present? %>
           <%= link_to "Remove Collaborator", wiki_collaborator_path(@wiki, user_id: user.id), method: :delete, data: {confirm: 'Are you sure you want to delete this collaborator?'} %>
        <% end %>
      <% end %>
     </div>
  </div>
<%# end %>
</div>
