<div class="col-md-8">
  <%= form_for [current_user, @wiki] do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title here" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body here" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% if user_is_authorized_for_wikis? %>
      <div class = "form-group">
        <%= f.label :private, class: 'checkbox' do %>
          <%= f.check_box :private %> Private Wiki
        <% end %>
      </div>
    <% end %>
  <% end %>
